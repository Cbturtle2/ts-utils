{
  "name": "@bryx911/ts-utils",
  "version": "1.8.0",
  "repository": "git@gitlab.bryx.com:bryx911/ts-utils",
  "author": "Tyler Holewinski <tyler.holewinski@bryx.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prepack": "yarn format && yarn lint && yarn build",
    "docs": "typedoc --entryPointStrategy expand --entryPoints src/* --out public",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier -c src/*",
    "format:fix": "prettier -w src/*",
    "test:cov": "jest --coverage --runInBand",
    "clean:tags": "git tag -d $(git tag -l) && git fetch --tags",
    "release:patch": "[ $(git rev-parse --abbrev-ref HEAD) = 'main' ] && yarn clean:tags && yarn version --patch && yarn deploy",
    "release:minor": "[ $(git rev-parse --abbrev-ref HEAD) = 'main' ] && yarn clean:tags && yarn version --minor && yarn deploy",
    "release:major": "[ $(git rev-parse --abbrev-ref HEAD) = 'main' ] && yarn clean:tags && yarn version --major && yarn deploy",
    "deploy": "NPM_TOKEN=$(yarn config get tsutils-authToken) npm publish && git push origin $(git describe --tags) && git push origin main"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@microsoft/api-extractor": "^7.33.7",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.4",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@ui-js/grok": "^1.8.0",
    "eslint": "^8.30.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.8.1",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "~0.22.0",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "registry": " https://gitlab.bryx.com/api/v4/projects/390/packages/npm/"
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
